    }
    .btn-outline-primary:hover {
        background-color: #bb86fc;
        color: #121212;
    }
    .btn-outline-danger {
        color: #cf6679;
        border-color: #cf6679;
    }
    .btn-outline-danger:hover {
        background-color: #cf6679;
        color: #121212;
    }
    .btn-outline-success {
        color: #03dac6;
        border-color: #03dac6;
    }
    .btn-outline-success:hover {
        background-color: #03dac6;
        color: #121212;
    }
    .swal2-popup {
        background-color: #1e1e1e;
        color: #e0e0e0;
    }
