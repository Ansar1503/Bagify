    <script >
        // Timer Settings
const TIMER_DURATION = 61; // 5 minutes in seconds

// Function to start and update the OTP timer
function startOtpTimer(timerElementId, resendButtonId) {
    const timerDisplay = document.getElementById(timerElementId);
    const resendButton = document.getElementById(resendButtonId);
    let timeLeft = TIMER_DURATION;

    function updateTimer() {
        const minutes = Math.floor(timeLeft / 60);
        const seconds = timeLeft % 60;
        timerDisplay.textContent = `${minutes}m ${seconds}s`;

        if (timeLeft <= 0) {
            timerDisplay.textContent = ''; // Clear the timer display
            resendButton.style.display = 'block'; // Show the resend button
        } else {
            timeLeft -= 1;
            setTimeout(updateTimer, 1000); // Update every second
        }
    }

    updateTimer(); // Start the timer
}

// Add event listeners for page-specific functionalities
document.addEventListener('DOMContentLoaded', function() {
    // Example for Forgot Password Page
    if (document.getElementById('forgot-password-form')) {
        startOtpTimer('otp-timer-forgot', 'resend-otp-btn'); // Pass timer and resend button IDs
    }

    // Form submission handling for Forgot Password Page
    const forgotPasswordForm = document.getElementById('forgot-password-form');
    if (forgotPasswordForm) {
        forgotPasswordForm.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission
            // Add your form submission logic here
            alert('Password reset form submitted');
        });
    }

    // Resend OTP button functionality
    const resendOtpButton = document.getElementById('resend-otp-btn');
    if (resendOtpButton) {
        resendOtpButton.addEventListener('click', function() {
            alert('Resend OTP clicked');
            // Add your resend OTP logic here
            // Optionally reset timer or reinitialize it if needed
            startOtpTimer('otp-timer-forgot', 'resend-otp-btn'); // Restart the timer
        });
    }
});

